<!-- Delete Modal Structure -->
<div id="delete-modal" class="modal">
  <div class="modal-header">
    <h5>Delete Confirmation</h5>
  </div>
  <form id="delete-form" action="", method="post", class="col-4">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="_method" value="delete" />
    <div class="modal-content">
      <div class="row center">
        <h5>
          <i class="material-icons left" style="color: darkred">warning</i>
          Are you sure you want to delete this article?
        </h5>
        <h6></h6>
      </div>
    </div>
    <div class="modal-footer center">
      <button id="close-button" class="modal-close btn waves-effect waves-light right" >
        Cancel
        <i class="material-icons left">clear</i>
      </button>
      <button id="delete-button" class="modal-action modal-close btn waves-effect waves-light right" type="submit" name="action">
        Yes delete it!
        <i class="material-icons left">delete</i>
      </button>
    </div>
  </form>
</div>
