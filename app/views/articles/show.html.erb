<div class="row">
  <div class="col s12 m12 l7 xl7">
    <div class="row">
      <div id="article-title" class="col s12">
        <p><%= @article.title %></p>
      </div>
      <div id="article-image" class="col s12" style="background-image: url('<%= @article.image %>');"></div>
      <div id="article-description" class="col s12">
        <p><%= @article.description %></p>
      </div>
    </div>
    <a href="<%= edit_article_path %>">Edit Article</a> | <a href="<%= articles_url %>">Back to articles listing</a>
  </div>
  <%= render partial: "layouts/right_aside_section", locals: {article: @article} %>
</div>